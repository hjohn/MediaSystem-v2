<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>zip</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>MediaSystem</baseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${project.basedir}/src/main/resources</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>${project.basedir}/src/main/resources/scripts</directory>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.build.directory}/${project.artifactId}-${project.version}-shaded.jar</source>
            <destName>mediasystem.jar</destName>
        </file>
        <file>
            <outputDirectory>/</outputDirectory>
            <source>${project.build.directory}/MediaSystem.exe</source>
        </file>
        <file>
            <outputDirectory>/ui-plugins</outputDirectory>
            <source>${project.basedir}/../mediasystem-ext-vlc/target/mediasystem-ext-vlc-${project.version}.jar</source>
            <destName>vlc-plugin/vlc.jar</destName>
        </file>
        <file>
            <outputDirectory>/ui-plugins</outputDirectory>
            <source>${project.basedir}/../mediasystem-ext-mpv/target/mediasystem-ext-mpv-${project.version}.jar</source>
            <destName>mpv-plugin/mpv.jar</destName>
        </file>
        <file>
            <outputDirectory>/plugins</outputDirectory>
            <source>${project.basedir}/../mediasystem-ext-scanners/target/mediasystem-ext-scanners-${project.version}.jar</source>
            <destName>scanners-plugin/scanners.jar</destName>
        </file>
        <file>
            <outputDirectory>/plugins</outputDirectory>
            <source>${project.basedir}/../mediasystem-ext-tmdb/target/mediasystem-ext-tmdb-${project.version}.jar</source>
            <destName>tmdb-plugin/tmdb.jar</destName>
        </file>
        <file>
            <outputDirectory>/plugins</outputDirectory>
            <source>${project.basedir}/../mediasystem-ext-local/target/mediasystem-ext-local-${project.version}.jar</source>
            <destName>local-client-plugin/local.jar</destName>
        </file>
    </files>
</assembly>